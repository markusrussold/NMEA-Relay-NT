<Window
    x:Class="NMEA_Relay_NT.AnchorWatchWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Ankerwache">

    <Grid x:Name="MainGrid" Background="Black">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <!-- Drawing Area -->
            <Canvas x:Name="AnchorCanvas"
                    Grid.Column="0"
                    Background="Black"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Stretch"/>

            <!-- Control Area -->
            <StackPanel Grid.Column="1" Margin="20" VerticalAlignment="Top" Spacing="10">
                <TextBlock Text="Radius (1m - 1000m):"/>
                <TextBox x:Name="RadiusInput" Width="80" TextChanged="RadiusInput_TextChanged"/>
                <TextBlock x:Name="RadiusLabel" Text="Aktueller Radius: "/>

                <TextBlock Text="Distanz zum Ursprung:"/>
                <TextBlock x:Name="DistanceToOriginTextBox" Width="80"/>

                <Border BorderBrush="Gray" BorderThickness="1" Padding="10" Margin="0,10,0,0">
                    <StackPanel Spacing="8">
                        <TextBlock Text="Ankerposition setzen" FontWeight="Bold"/>

                        <Button Content="Anker auf aktuelle Position"
                                Click="ResetAnchorPosition_Click"
                                HorizontalAlignment="Stretch"/>

                        <TextBlock Text="Offset Richtung (Grad):"/>
                        <TextBox x:Name="OffsetBearingInput" Width="80"/>

                        <TextBlock Text="Offset Distanz (m):"/>
                        <TextBox x:Name="OffsetDistanceInput" Width="80"/>

                        <Button Content="Anker verschieben"
                                Click="MoveAnchorWithOffset_Click"
                                HorizontalAlignment="Stretch"/>
                    </StackPanel>
                </Border>
            </StackPanel>
        </Grid>

        <!-- Footer -->
        <TextBlock x:Name="FooterTextBlock"
                   Grid.Row="1"
                   Text=""
                   Foreground="White"
                   FontSize="12"
                   Margin="5"/>

    </Grid>
</Window>
