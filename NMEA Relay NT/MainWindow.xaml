<Window
    x:Class="NMEA_Relay_NT.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Title="NMEA Relay NT">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Titel und Copyright -->
        <TextBlock Text="Copyright by Markus Russold - Version 1.0.0 (Build 361)"
                   HorizontalAlignment="Right"
                   FontSize="12"
                   Foreground="Gray"/>

        <!-- Hauptbereich -->
        <Grid Grid.Row="1" Margin="0,20,0,20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="3*"/>
            </Grid.ColumnDefinitions>

            <!-- Linker Block: Positionsdaten -->
            <StackPanel Grid.Column="0" Spacing="8">
                <TextBlock Text="LAT:"/>
                <TextBlock Text="LON:"/>
                <TextBlock Text="HDOP:"/>
                <TextBlock Text="UTC:"/>
                <TextBlock Text="ALT:"/>
                <TextBlock Text="FIX:"/>
                <TextBlock Text="#-SAT:"/>
                <TextBlock Text="SOG:"/>
                <TextBlock Text="COG:"/>

                <StackPanel Orientation="Horizontal" Spacing="20">
                    <TextBlock Text="Queue #: 0"/>
                    <TextBlock Text="Queue B: 0"/>
                </StackPanel>

                <TextBlock Text="Log:"/>
                <TextBlock Text="C:\Users\russold\AppData\Roaming\NMEA Relay\NMEARelayLog.txt"
                           TextWrapping="Wrap"
                           FontSize="10"/>
            </StackPanel>

            <!-- Rechter Block: Status, Buttons und Nachricht -->
            <StackPanel Grid.Column="1" Spacing="12">

                <!-- Status ComboBox -->
                <ComboBox Header="Status auswählen">
                    <ComboBoxItem Content="Unterwegs mit Maschinenantrieb"/>
                    <ComboBoxItem Content="Vor Anker"/>
                    <ComboBoxItem Content="Manövrierunfähig"/>
                    <ComboBoxItem Content="Beschränkt manövrierfähig"/>
                    <ComboBoxItem Content="Tiefgang behindert"/>
                    <ComboBoxItem Content="Festgemacht"/>
                    <ComboBoxItem Content="Auf Grund"/>
                    <ComboBoxItem Content="Mit Fischerei beschäftigt"/>
                    <ComboBoxItem Content="Unter Segeln"/>
                </ComboBox>

                <StackPanel Orientation="Horizontal" Spacing="12">
                    <Button Content="In Fahrt unter Segel" Width="160"/>
                    <Button Content="Motorfahrt" Width="100"/>
                </StackPanel>

                <!-- Nachricht -->
                <TextBlock Text="Nachricht:"/>
                <TextBox Height="40"/>

                <!-- Konfiguration (statt GroupBox) -->
                <TextBlock Text="Konfiguration"
                           FontWeight="Bold"
                           Margin="0,12,0,4"/>
                <Border BorderBrush="Gray" BorderThickness="1" Padding="8">
                    <StackPanel Spacing="8">
                        <StackPanel Orientation="Horizontal" Spacing="12">
                            <TextBlock Text="Bootsname:" Width="120"/>
                            <TextBox Width="200" Text="Sea Pearl Super"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Spacing="12">
                            <TextBlock Text="Ziel:" Width="120"/>
                            <TextBox Width="200" Text="Weit Weit Weg"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Spacing="12">
                            <TextBlock Text="Callsign:" Width="120"/>
                            <TextBox Width="200" Text="NotUsed"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Spacing="12">
                            <TextBlock Text="Server-Name:" Width="120"/>
                            <TextBox Width="200" Text="mrussold.com"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Spacing="12">
                            <TextBlock Text="Server-Port:" Width="120"/>
                            <TextBox Width="80" Text="1234"/>
                            <TextBlock Text="Key:"/>
                            <TextBox Width="100" Text="seapearl4519"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Spacing="12">
                            <TextBlock Text="OpenCPN:" Width="120"/>
                            <TextBox Width="150" Text="192.168.0.220"/>
                            <TextBlock Text="Port:"/>
                            <TextBox Width="80" Text="2947"/>
                        </StackPanel>

                        <StackPanel Orientation="Horizontal" Spacing="12">
                            <Button Content="Anwenden" Width="100"/>
                            <Button Content="Exit" Width="100"/>
                        </StackPanel>
                    </StackPanel>
                </Border>

                <!-- Status-Indikatoren -->
                <StackPanel Orientation="Horizontal" Spacing="12" HorizontalAlignment="Right">
                    <Border Background="Red" Width="40" Height="20">
                        <TextBlock Text="GPS" Foreground="White" HorizontalAlignment="Center"/>
                    </Border>
                    <Border Background="Green" Width="40" Height="20">
                        <TextBlock Text="SRV" Foreground="White" HorizontalAlignment="Center"/>
                    </Border>
                    <Border Background="Gray" Width="40" Height="20">
                        <TextBlock Text="MSG" Foreground="White" HorizontalAlignment="Center"/>
                    </Border>
                </StackPanel>

            </StackPanel>
        </Grid>

    </Grid>
</Window>
